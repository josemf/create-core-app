{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "**/node_modules/**/*",
        "dist/**/*"
    ],
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDirs": [],
        "typeRoots": [],
        "rootDir": "./src",        
        "outDir": "./dist",
        "noEmitOnError": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "types": ["node"]
    }
}
